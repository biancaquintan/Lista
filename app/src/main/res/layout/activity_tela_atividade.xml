<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_atividade"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.edu.iff.pooa20162.lista.Activity.TelaAtividade">

    <TextView
        android:id="@+id/tx5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="Título: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Descrição: "
        android:textSize="20sp"
        android:layout_below="@+id/ttitulo"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/ttitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textColorLink="@color/verde"
        android:textSize="18sp"
        tools:textColorLink="@color/verde"
        tools:layout_editor_absoluteY="216dp"
        tools:layout_editor_absoluteX="101dp"
        android:layout_alignBaseline="@+id/tx5"
        android:layout_alignBottom="@+id/tx5"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/tdescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textColorLink="@color/verde"
        tools:textColorLink="@color/verde"
        tools:layout_editor_absoluteY="98dp"
        tools:layout_editor_absoluteX="85dp"
        android:layout_alignBaseline="@+id/txt6"
        android:layout_alignBottom="@+id/txt6"
        android:layout_toEndOf="@+id/txt6" />

    <Button
        android:id="@+id/badicionar"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:background="@color/verde"
        android:elevation="0dp"
        android:padding="10dp"
        android:text="Adicionar atividade"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        tools:layout_editor_absoluteY="324dp"
        tools:layout_editor_absoluteX="77dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/balterar"
        android:layout_alignEnd="@+id/ttitulo" />

    <Button
        android:id="@+id/balterar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:background="@color/verde"
        android:elevation="0dp"
        android:padding="10dp"
        android:text="Atualizar"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="40dp"
        android:layout_below="@+id/tdescricao"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
